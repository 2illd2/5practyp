<Window x:Class="WpfApp10.ReceiptsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="ReceiptsWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="0 10"/>
            <Setter Property="Background" Value="#FF31C8F9"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ReceiptsGrid" AutoGenerateColumns="False" Grid.Row="0" Grid.RowSpan="4">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding OrderID}" Header="Order ID"/>
                <DataGridTextColumn Binding="{Binding ReceiptDate}" Header="Receipt Date"/>
                <DataGridTextColumn Binding="{Binding TotalAmount}" Header="Total Amount"/>
                <DataGridTextColumn Binding="{Binding ChangeAmount}" Header="Change Amount"/>
                <DataGridTextColumn Binding="{Binding AmountCus}" Header="Amount from Customer"/>
                <DataGridTextColumn Binding="{Binding PaymentMethod}" Header="Payment Method"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Add" Click="AddButton_Click" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" />
        <Button Content="Update" Click="UpdateButton_Click" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Center"   />
        <Button Content="Delete" Click="DeleteButton_Click" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" Width="100" HorizontalAlignment="Right"  />
        <ComboBox x:Name="OrderComboBox" Grid.Row="1" Grid.Column="1" Width="100" Height="30" Background="#3389B498" HorizontalAlignment="Left"/>
        <TextBox x:Name="TotalAmountTextBox" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Background="#3389B498"  HorizontalAlignment="Left"/>
        <TextBox x:Name="ChangeAmountTextBox" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Background="#3389B498"  HorizontalAlignment="Center"/>
        <TextBox x:Name="AmountCusTextBox" Grid.Row="2" Grid.Column="1" Width="100" Height="30" Background="#3389B498"  HorizontalAlignment="Right"/>
        <TextBox x:Name="PaymentMethodTextBox" Grid.Row="3" Grid.Column="1" Width="200" Height="30" Background="#3389B498"  HorizontalAlignment="Center"/>

        <TextBlock Text="Order ID:" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock Text="Total Amount:"  VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Text="Change Amount:"  VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Amount from Customer:"  VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"></TextBlock>
        <TextBlock Text="Payment Method:"  VerticalAlignment="Top" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left"></TextBlock>
        <Button Content="Back" Click="Back_Click" Grid.Column="1" Grid.Row="3"  Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
</Window>
